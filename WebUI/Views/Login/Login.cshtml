
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Acceder</title>

    <!--Css-->
    <link href="~/Content/angular-material/angular-material.min.css" rel="stylesheet" />
    <link href="~/Content/angular-material/angular-material.layouts.css" rel="stylesheet" />

    <!--JQuery-->
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>

    <!--AngularJS-->
    <script src="~/Scripts/angular/angular.min.js"></script>

    <!--Angular Route-->
    <script src="~/Scripts/angular-route/angular-route.min.js"></script>

    <!--Angular Material-->
    <script src="~/Scripts/angular-material/angular-material.js"></script>

    <!--Material animate-->
    <script src="~/Scripts/angular-animate/angular-animate.min.js"></script>

    <!--Material aria-->
    <script src="~/Scripts/angular-aria/angular-aria.min.js"></script>

    <!--Material messages-->
    <script src="~/Scripts/angular-messages/angular-messages.min.js"></script>

    <!--Angular Material Icon-->
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular-material-icons/0.7.1/angular-material-icons.min.js"></script>
   <!--Login Module Angular-->
    <script src="~/Scripts/App/LoginModule.js"></script>

    <style>
        body {
            background-color: #242A3A;
        }

        .login md-card {
            width: 400px;
            min-height: 600px;
            background-color: #10213E;
        }
        .btn1 {
            border-radius: 15px;
            font-size: 16px;
        }
    </style>

</head>
<body ng-app="LoginApp">
    <div  ng-controller="LoginController as ctrl" layout="row" layout-fill ng-cloak md-theme="docs-dark">
        <section layout="column" flex layout-align="center center" class="login">
            <md-card class="md-whiteframe-10dp" layout-padding>
               <div layout="row" layout-align="center center">
                   <img ng-src="~/Content/logoPayments.png" class="md-card-image" style="width:130px !important" />
               </div>
                <md-card-title style="max-height: 50px;">
                    <md-card-title-text  layout="row" layout-align="center center">
                        <span class="md-headline" style="color:#607D8B">Pagos</span>
                    </md-card-title-text>
                </md-card-title>
                <md-card-content>
                    <form name="ctrl.login" novalidate ng-keyup="$event.keyCode == 13 && Autenticar()">
                        <md-input-container class="md-block">
                            <label for="email">Correo</label>
                            <input type="email" name="email" ng-model="usuario.correo" required />
                            <div ng-messages="ctrl.login.email.$error">
                                <div ng-message="required">Es obligatorio</div>
                            </div>
                        </md-input-container>
                        <md-input-container class="md-block">
                            <label for="password">Contraseña</label>
                            <input type="password" name="password" ng-model="usuario.contra" required />
                            <div ng-messages="ctrl.login.password.$error">
                                <div ng-message="required">Es obligatorio</div>
                            </div>
                        </md-input-container>
                        <md-input-container class="md-block">
                            <div layout="row" layout-align="center center">
                                <md-button class="md-raised md-accent btn1" ng-click="Autenticar()" flex="50" style="
                                    font-size: medium;
                                    font-weight: bolder;
                                    max-width: 120px;">
                                Login
                                </md-button>
                            </div>
                        </md-input-container>
                        <div layout="row" layout-align="center center">
                            <md-progress-circular ng-show="ProgresVer" class="md-accent" md-diameter="40"></md-progress-circular>
                        </div>
                        <div layout="row" layout-align="center center" ng-show="ErrorMensaje">
                            <span class="md-headline" style="color:#FF9800;font-size:small">usuario o contraseña incorrecta</span>
                        </div>
                  </form>
                </md-card-content>
            </md-card>
        </section>
    </div>
</body>
</html>
